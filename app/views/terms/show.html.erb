<div class='resource-show'>
<h2>
  <%= "#{@term.label(@context).value} (Term)" %>
	<br/>
	<span style="font-size: 0.6em;">
		<a href='<%= @term.uri %>' target="_blank"><%= @term.uri %></a>
	</span>
</h2>

<hr/>

<strong class="label">Description:</strong>

<% @term.get_objects(RDF::RDFS.comment => {:simple_value => :value, :context => @context}).each do |comment| %>
	<p class="indent">
	  <%= "#{comment}" %>	
	</p>  
<% end %>

<hr/>

<strong class="label">Gold Mapping:</strong>

<ul class="indent">
  <% @meaning_nodes.each do |meaning| %>
    <li>
      <%= link_to_dtapp(meaning.label(@lingdesktop_context).value, 'ontology_class_view', meaning.localname) %>
      &nbsp;:&nbsp;
      <%= meaning.get_objects(RDF::RDFS.comment => {:first=> true, :simple_value => :value, :context => @ld_context}) %>
    </li>
  <% end %>
</ul>

</div>