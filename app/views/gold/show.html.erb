<div class='resource-show'>
<h2>
	<%= @resource.get_objects(RDF::RDFS.label => {:first=> true, :simple_value => :value, :context => @context}) %>
	<br/>
	<span style="font-size: 0.6em;">
		<a href='<%= @resource.uri %>' target="_blank"><%= @resource.uri %></a>
	</span>
</h2>

<hr/>

<strong class="label">Definition:</strong>

<% @resource.get_objects(RDF::RDFS.comment => {:simple_value => :value, :context => @context}).each do |comment| %>
	<p class="indent">
	  <%= "#{comment}" %>	
	</p>  
<% end %>

</div>